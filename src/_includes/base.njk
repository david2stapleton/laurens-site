<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ site.design.site_name }} | {{ site.design.site_tagline }}</title>
  <meta name="description" content="{{ site.design.site_name }} â€” {{ site.design.site_tagline }}">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="{{ site.fonts.url | safe }}" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    :root {
      --bg: {{ site.design.background_color | default("#f2f2f2") }};
      --text: {{ site.design.text_color | default("#2e2e2e") }};
      --accent: {{ site.design.accent_color | default("#ffaa81") }};
      --heading-font: {{ site.fonts.heading | safe }};
      --body-font: {{ site.fonts.body | safe }};
      --section-padding: {{ site.design.section_padding | default(80) }}px;
      --content-gap: {{ site.design.content_gap | default(48) }}px;
      --container-width: {{ site.design.container_width | default(1100) }}px;
    }
  </style>
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar" id="navbar">
    <div class="nav-container">
      <a href="/" class="nav-logo">{{ site.design.site_name }}</a>
      {% if site.design.nav and site.design.nav.length %}
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links" id="nav-links">
          {% for item in site.design.nav %}
            <li><a href="{{ item.slug }}"{% if page.url == item.slug %} class="active"{% endif %}>{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </nav>

  {{ content | safe }}

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <p>&copy; 2026 {{ site.design.site_name }}. All rights reserved.</p>
        <div class="social-links">
          {% if site.design.social_facebook %}
            <a href="{{ site.design.social_facebook }}" aria-label="Facebook" target="_blank" rel="noopener">FB</a>
          {% endif %}
          {% if site.design.social_instagram %}
            <a href="{{ site.design.social_instagram }}" aria-label="Instagram" target="_blank" rel="noopener">IG</a>
          {% endif %}
          {% if site.design.social_youtube %}
            <a href="{{ site.design.social_youtube }}" aria-label="YouTube" target="_blank" rel="noopener">YT</a>
          {% endif %}
          {% if site.design.social_tiktok %}
            <a href="{{ site.design.social_tiktok }}" aria-label="TikTok" target="_blank" rel="noopener">TT</a>
          {% endif %}
        </div>
      </div>
    </div>
  </footer>

  <script src="/script.js"></script>
</body>
</html>
