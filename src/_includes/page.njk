---
layout: base.njk
---

{% for block in blocks %}
{% if block.type == "hero_gallery" %}
<section class="section section-hero-gallery">
  {% include "blocks/hero_gallery.njk" %}
</section>
{% else %}
<section class="section section-{{ block.type }}">
  <div class="container">
    {% if block.heading %}
      <h2>{{ block.heading }}</h2>
    {% endif %}
    {% if block.type == "text" %}
      {% include "blocks/text.njk" %}
    {% elif block.type == "photo" %}
      {% include "blocks/photo.njk" %}
    {% elif block.type == "photo_grid" %}
      {% include "blocks/photo_grid.njk" %}
    {% elif block.type == "links" %}
      {% include "blocks/links.njk" %}
    {% elif block.type == "reviews" %}
      {% include "blocks/reviews.njk" %}
    {% elif block.type == "youtube_grid" %}
      {% include "blocks/youtube_grid.njk" %}
    {% elif block.type == "contact" %}
      {% include "blocks/contact.njk" %}
    {% endif %}
  </div>
</section>
{% endif %}
{% endfor %}
