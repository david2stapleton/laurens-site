<div class="photo-grid photo-grid-{{ block.columns | default(3) }}">
  {% for item in block.videos %}
    <figure class="photo-grid-item">
      <a href="{{ item.url }}" target="_blank" rel="noopener" class="youtube-thumb">
        <img src="https://img.youtube.com/vi/{{ item.url | youtubeId }}/hqdefault.jpg" alt="{{ item.title | default('') }}">
        <span class="youtube-play" aria-hidden="true"></span>
      </a>
      {% if item.title %}
        <figcaption style="text-align: {{ site.design.caption_align | default('center') }}">{{ item.title | markdown | safe }}</figcaption>
      {% endif %}
    </figure>
  {% endfor %}
</div>
