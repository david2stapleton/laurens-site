<div class="contact-grid">
  <div class="contact-info">
    <p>{{ block.intro }}</p>
    <p class="contact-email">
      <a href="mailto:{{ block.email }}">{{ block.email }}</a>
    </p>
  </div>
  <form class="contact-form" id="contact-form" action="https://formsubmit.co/david2stapleton@gmail.com" method="POST">
    <input type="hidden" name="_subject" value="New contact from {{ site.design.site_name }}">
    <input type="hidden" name="_captcha" value="false">
    <input type="text" name="_honey" style="display:none">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn">Send Message</button>
  </form>
</div>
