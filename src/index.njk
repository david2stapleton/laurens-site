---
layout: base.njk
---

<!-- Hero Section -->
<section class="hero" id="hero">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1>{{ site.hero.title }}</h1>
    <p class="hero-subtitle">{{ site.hero.subtitle }}</p>
    <p class="hero-location">{{ site.hero.location }}</p>
  </div>
</section>

<!-- About Section -->
<section class="section about tab-panel active" id="about">
  <div class="container">
    <h2>{{ site.about.title }}</h2>
    <div class="about-grid">
      <div class="about-image">
        {% if site.about.headshot %}
          <img src="{{ site.about.headshot }}" alt="Headshot of {{ site.hero.title }}">
        {% else %}
          <div class="placeholder-image" aria-label="Headshot of {{ site.hero.title }}">
            <span>Photo</span>
          </div>
        {% endif %}
      </div>
      <div class="about-text">
        {{ site.about.body | markdown | safe }}
        {% if site.about.resume %}
          <a href="{{ site.about.resume }}" class="btn btn-resume" target="_blank" rel="noopener">Download Resume</a>
        {% else %}
          <span class="btn btn-resume disabled">Resume Coming Soon</span>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section class="section contact tab-panel" id="contact">
  <div class="container">
    <h2>{{ site.contact.title }}</h2>
    <div class="contact-grid">
      <div class="contact-info">
        <p>{{ site.contact.intro }}</p>
        <p class="contact-email">
          <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a>
        </p>
      </div>
      <form class="contact-form" id="contact-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn">Send Message</button>
      </form>
    </div>
  </div>
</section>
